package com.epam4.task4;
public class CalculateInterest {
	public float calculateSimpleInterest(float Principle,float Time,float Rate)
	{
		float Simple_Interest=(Principle*Time*Rate)/100;
		return Simple_Interest;
	}
	public double calculateCompoundInterest(float Principle,float Time,float Rate)
	{
		double Compound_Interest = Principle*(Math.pow((1+Rate/100),Time));        
		return Compound_Interest;
	}
}
